<Window x:Class="CyberSecurityBotGUI.QuizWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Quiz" Height="600" Width="900" Background="#F9FAFB" WindowStartupLocation="CenterScreen">
   <Grid Margin="40">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="600" Margin="0,20,0,0">
            <TextBlock x:Name="QuestionNumberText" Text="Question 1 of 5" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" />
            <ProgressBar x:Name="QuizProgress" Height="6" Minimum="0" Maximum="5" Value="1" Foreground="#3B82F6" Background="#E5E7EB"/>


            <TextBlock x:Name="QuestionText" Text="" FontSize="22" FontWeight="Bold" Margin="0,30,0,20" TextWrapping="Wrap"/>

           <StackPanel x:Name="OptionsPanel" />

           <TextBlock x:Name="FeedbackText" FontSize="16" FontWeight="Normal" Foreground="#2563EB" Margin="0,20,0,0"/>

           <Button Content="Submit" Margin="0,30,0,0" Width="100" Height="40" Background="#2563EB" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Click="Submit_Click"/>
       </StackPanel>
   </Grid>
</Window>
